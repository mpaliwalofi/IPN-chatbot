# IPN RAG Chatbot Environment Configuration
# Copy this file to .env and fill in your actual values

# Required: Groq API Key for LLM
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Optional: Flask Configuration
FLASK_DEBUG=false
PORT=5000

# Optional: RAG Engine Configuration
# Similarity threshold for document retrieval (0.0 - 1.0, higher = more strict)
SIMILARITY_THRESHOLD=0.35

# Maximum chat history messages to include in context
MAX_HISTORY_MESSAGES=10

# Number of document chunks to retrieve per query
TOP_K_RETRIEVAL=5

# Optional: Admin API Key for rebuild endpoint
# ADMIN_API_KEY=your_secure_admin_key_here
